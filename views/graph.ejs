  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
      google.charts.load('current', {'packages':['line']});
      google.charts.setOnLoadCallback(drawChart);

    function drawChart() {

      var data = new google.visualization.DataTable();
      data.addColumn('number', 'Time');
      data.addColumn('number', "PM2.5");
      data.addColumn('number', 'CO');
      data.addColumn('number', 'LPG');
      data.addColumn('number', 'HUMIDITY');
      data.addColumn('number', 'Temperature');


      console.log(document.getElementById("10").value);

      var len  = parseInt(document.getElementById("len").value);

      for(var i = 0 ; i < len ; i++){

        var hum = parseInt(document.getElementById("1"+i).value);
        var pm2 = parseInt(document.getElementById("2" + i).value);
        var co = parseInt(document.getElementById("3"+i).value) ;
        var lpg = parseInt(document.getElementById("4"+i).value);
        var temp = parseInt(document.getElementById("5"+i).value);

        data.addRows([
          [i+1 ,pm2 , co , lpg , hum  , temp]
        ]);
        console.log(hum + " " + pm2 +  "  "  + co +  " " + lpg);
      }
      var options = {
        chart: {
          title: 'Air Monitoring',
          subtitle: 'in ppm'
        },
        width: 900,
        height: 500,
        axes: {
          x: {
            0: {side: 'top'}
          }
        }
      };

      var chart = new google.charts.Line(document.getElementById('line_top_x'));

      chart.draw(data, google.charts.Line.convertOptions(options));
    }

    </script>


