    <h1 style="text-align: center; margin: 100px 20px 20px 20px"> Air Quality Index </h1>

     <div class="container">
      <table>
        <tr>
          <th>Parameters</th>
          <th>Values</th>
        </tr>
        <tr>
          <td>Temperature</td>
          <td> <%= data[index].field1 %></td>
        </tr>
        <tr>
          <td>Humidity</td>
          <td><%= data[index].field2 %></td>
        </tr>
        <tr>
          <td>PPM</td>
          <td><%= data[index].field3 %> </td>
        </tr>
 
        <tr>
          <td>CO</td>
          <td><%= data[index].field4 %> </td>
 
        </tr>
 
        <tr>
         <td>LPG Gas Levek</td>
         <td><%= data[index].field5 %> </td>
 
       </tr>
 
     </table>
     </div>
     <div class="container">
      <div class="row" style="margin: 50px 50px 50px 50px;">
        <div class="column" style="width: 65%;">
          <h3>Temperature - level : </h3>
          <meter class="progress progress-bar-striped ppm_meter progress-bar-animated" low="60" high="60" optimum="30" max="500" value=<%= data[index].field1 %>></meter>
        </div>
        
        <div class="column" style="width: 35%; ">
          <h3>PPM - level : </h3>
          <meter class="ppm_meter progress progress-bar-striped progress-bar-animated" low="400" high="400" optimum="300" max="1000" value  = <%= data[index].field3 %>></meter>
        </div>
  
      </div>
  
      <div class="row" style="margin: 50px 50px 50px 50px;">
        <div class="column" style="width: 65%;">
          <h3>CO - level  : </h3>
          <meter class="ppm_meter progress progress-bar-striped progress-bar-animated" low="300" high="300" optimum="200" max="1000" value  = <%= data[index].field4 %>></meter>
         
        </div>
  
        <div class="column" style="width:35%;">
            
          <h3>LPG Gas - level  : </h3>
          <meter class=" ppm_meter progress progress-bar-striped progress-bar-animated" role="progressbar" low="300" high="300" optimum="200" max="1000" value  = <%= data[index].field5 %>></meter>
  
        </div>
      </div>

